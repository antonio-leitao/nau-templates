%unnamed chapter formatting

%function to controll what gets written in TOC
\newcommand{\nocontentsline}[3]{}
\newcommand{\tocless}[2]{\bgroup\let\addcontentsline=\nocontentsline#1{#2}\egroup}

% Branching chapter function -> empty or not
\newcommand{\clapter}[1]{%
  \if\relax\detokenize{#1}\relax
    \tocless\chapter{}
    \addcontentsline{toc}{chapter}{\selectfont Chapter\ \thechapter} % Add chapter number to table of contents
  \else
    \tocless\chapter{#1}
    \addcontentsline{toc}{chapter}{\selectfont #1}
  \fi
}

