\usepackage[activate={true,nocompatibility},final,tracking=true,kerning=true,spacing=true,factor=1100,stretch=10,shrink=10]{microtype}   % Better typography

\usepackage{lettrine}   % Add drop caps to chapter openings
\usepackage{graphicx}
\usepackage{ebgaramond}
\usepackage{librecaslon}
\usepackage{helvet}

\newcommand{\hsp}{\kern 1pt}    % for nested quotation marks

% Paragraph formatting
\renewcommand{\baselinestretch}{1.3}      % Allow paragraphs to breathe by spreading the lines further
\setlength{\parskip}{0pt}                   % Fixed space between paragraphs (i.e. disable variable parskip)
\setlength{\parindent}{1em}

% Donâ€™t add extra space after sentences
\frenchspacing

% Reduce widows/orphans
\widowpenalty=10000
\clubpenalty=10000

% Page size
\usepackage[
    paperheight=9in,
    paperwidth=6in,
    top=0.75in,
    bottom=0.75in,
    outer=0.75in,
    inner=0.875in,
    bindingoffset=0.125in, % Adjust this value as needed
    twoside % Enable two-sided layout
]{geometry}

% Reduce overfull \hbox{} warnings
\sloppy

% Contents page
\usepackage[titles]{tocloft}
\renewcommand{\cftchapfont}{\large\itshape}
\renewcommand{\cftchappagefont}{\normalfont}
\renewcommand{\numberline}[1]{}
\renewcommand{\cftpartfont}{\scshape}
% Reduce spacing between chapters
\setlength{\cftbeforechapskip}{0.5em}

% Chapter headings
\usepackage{titlesec}
\renewcommand\thechapter{\Roman{chapter}}
\titleformat{\chapter}[display]
  {\normalfont\huge\centering}
  {\sffamily\scshape\fontsize{14}{18}\selectfont chapter\ \thechapter}{0pt}{\Huge}

% Part headings
\titleformat{\part}[display]
  {\centering\normalfont}
  {\sffamily\scshape\Large\ordinalstring{part} part}
  {0pt}
  {\scshape\Huge}

% headers/footers
\usepackage{fancyhdr}
\setlength{\headheight}{15pt}
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}


